root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.cjs]
trim_trailing_whitespace = false
indent_size = 2

[*.{yml,yaml,json}]
trim_trailing_whitespace = false
indent_size = 2

[*.toml]
indent_size = 2
indent_style = space
